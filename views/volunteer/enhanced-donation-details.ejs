<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Donation Details - Live Distance Tracking</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/distance-display.css" rel="stylesheet">
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --danger-color: #ef4444;
            --info-color: #3b82f6;
        }
        
        .main-container {
            min-height: 100vh;
            background: #f8f9fa;
        }
        
        .header-section {
            background: var(--primary-gradient);
            color: white;
            padding: 2rem 0;
        }
        
        .donation-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        
        .card-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 1.5rem;
        }
        
        .info-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.75rem 0;
            border-bottom: 1px solid #e9ecef;
        }
        
        .info-item:last-child {
            border-bottom: none;
        }
        
        .info-label {
            font-weight: 600;
            color: #495057;
        }
        
        .info-value {
            color: #6c757d;
        }
        
        .acceptance-section {
            background: white;
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            margin-top: 2rem;
        }
        
        .btn-accept {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            border: none;
            padding: 12px 30px;
            font-weight: 600;
            border-radius: 8px;
            transition: all 0.3s ease;
        }
        
        .btn-accept:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 15px rgba(16, 185, 129, 0.3);
        }
        
        .btn-decline {
            background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
            border: none;
            padding: 12px 30px;
            font-weight: 600;
            border-radius: 8px;
            transition: all 0.3s ease;
        }
        
        .btn-decline:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 15px rgba(107, 114, 128, 0.3);
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Header Section -->
        <div class="header-section">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h1 class="mb-0">
                            <i class="fas fa-gift"></i> Donation Details
                        </h1>
                        <p class="mb-0 mt-2">Assignment #<%= donation.id %> - Live Distance Tracking</p>
                    </div>
                    <div class="col-md-4 text-end">
                        <a href="/volunteer-dashboard" class="btn btn-light">
                            <i class="fas fa-arrow-left"></i> Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="container py-4">
            <div class="row">
                <!-- Donation Information -->
                <div class="col-lg-8">
                    <div class="donation-card card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-info-circle"></i> Donation Information
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="info-item">
                                <span class="info-label">Donation ID</span>
                                <span class="info-value">#<%= donation.id %></span>
                            </div>
                            
                            <div class="info-item">
                                <span class="info-label">Donor Name</span>
                                <span class="info-value"><%= donation.donor_name || 'Not specified' %></span>
                            </div>
                            
                            <div class="info-item">
                                <span class="info-label">NGO</span>
                                <span class="info-value"><%= donation.ngo_name || 'Not assigned' %></span>
                            </div>
                            
                            <div class="info-item">
                                <span class="info-label">Pickup Date</span>
                                <span class="info-value">
                                    <%= donation.pickup_date ? new Date(donation.pickup_date).toLocaleDateString() : 'Not scheduled' %>
                                </span>
                            </div>
                            
                            <div class="info-item">
                                <span class="info-label">Pickup Time</span>
                                <span class="info-value"><%= donation.pickup_time || 'Not scheduled' %></span>
                            </div>
                            
                            <div class="info-item">
                                <span class="info-label">Status</span>
                                <span class="info-value">
                                    <span class="badge bg-<%= donation.status === 'pending' ? 'warning' : 'success' %>">
                                        <%= donation.status.charAt(0).toUpperCase() + donation.status.slice(1) %>
                                    </span>
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Items to Deliver -->
                    <div class="donation-card card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-box"></i> Items to Deliver
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <% if (donation.books > 0) { %>
                                    <div class="col-md-4 mb-2">
                                        <span class="badge bg-primary fs-6">Books: <%= donation.books %></span>
                                    </div>
                                <% } %>
                                <% if (donation.clothes > 0) { %>
                                    <div class="col-md-4 mb-2">
                                        <span class="badge bg-success fs-6">Clothes: <%= donation.clothes %></span>
                                    </div>
                                <% } %>
                                <% if (donation.grains > 0) { %>
                                    <div class="col-md-4 mb-2">
                                        <span class="badge bg-warning fs-6">Grains: <%= donation.grains %></span>
                                    </div>
                                <% } %>
                                <% if (donation.footwear > 0) { %>
                                    <div class="col-md-4 mb-2">
                                        <span class="badge bg-dark fs-6">Footwear: <%= donation.footwear %></span>
                                    </div>
                                <% } %>
                                <% if (donation.toys > 0) { %>
                                    <div class="col-md-4 mb-2">
                                        <span class="badge bg-info fs-6">Toys: <%= donation.toys %></span>
                                    </div>
                                <% } %>
                                <% if (donation.school_supplies > 0) { %>
                                    <div class="col-md-4 mb-2">
                                        <span class="badge bg-secondary fs-6">School Supplies: <%= donation.school_supplies %></span>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Distance Information -->
                <div class="col-lg-4">
                    <div class="donation-card card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-map-marked-alt"></i> Distance & Travel
                            </h5>
                        </div>
                        <div class="card-body">
                            <!-- Distance metrics will be populated here -->
                            <div id="distanceInfo">
                                <div class="text-center py-4">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Calculating distance...</span>
                                    </div>
                                    <p class="mt-2">Calculating distance from your location...</p>
                                </div>
                            </div>
                            
                            <!-- Donation Location Details -->
                            <div class="location-details mt-4 p-3 bg-light rounded">
                                <h6>🎯 Donation Location:</h6>
                                <p class="mb-1"><strong>Address:</strong> <%= donation.address || 'Not specified' %></p>
                                <p class="mb-0"><strong>Coordinates:</strong> 
                                    <small class="text-muted">
                                        <%= donation.latitude %>, <%= donation.longitude %>
                                    </small>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Acceptance Section -->
            <div class="acceptance-section">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h5 class="mb-2">Ready to accept this donation?</h5>
                        <p class="text-muted mb-0" id="acceptanceDetails">
                            Check distance and timing information above before accepting.
                        </p>
                    </div>
                    <div class="col-md-4 text-end">
                        <div id="distanceWarning" class="alert alert-warning mb-3" style="display: none;"></div>
                        
                        <button id="acceptBtn" class="btn btn-accept btn-lg me-2" onclick="acceptDonationWithDistance()">
                            <i class="fas fa-check"></i> Accept Assignment
                        </button>
                        
                        <button class="btn btn-decline btn-lg" onclick="rejectDonation()">
                            <i class="fas fa-times"></i> Decline
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/live-distance-display.js"></script>
    
    <script>
        // Set donation data for distance calculation
        window.donationData = {
            latitude: <%= donation.latitude %>,
            longitude: <%= donation.longitude %>,
            address: '<%= donation.address || "" %>'
        };
        
        // Store assignment ID for acceptance
        window.assignmentId = '<%= donation.id %>';
        
        // Original accept function (if exists)
        window.originalAcceptDonation = function(distance, travelTime) {
            // This would call the actual acceptance API
            console.log('Accepting donation with distance:', distance, 'km, travel time:', travelTime, 'min');
            
            // Show success message
            alert(`✅ Donation accepted!\nDistance: ${distance.toFixed(1)} km\nTravel time: ${travelTime} min`);
            
            // Redirect to dashboard or assignment page
            window.location.href = '/volunteer-dashboard';
        };
        
        // Reject function
        function rejectDonation() {
            if (confirm('Are you sure you want to decline this donation assignment?')) {
                // This would call the rejection API
                console.log('Rejecting donation assignment');
                alert('Donation assignment declined.');
                window.location.href = '/volunteer-dashboard';
            }
        }
        
        // Make rejectDonation globally available
        window.rejectDonation = rejectDonation;
    </script>
</body>
</html>

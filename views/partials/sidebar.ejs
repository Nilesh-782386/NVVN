<!-- Dashboard Sidebar Navigation -->
<div class="sidebar" id="sidebar">
    <div class="sidebar-header">
        <div class="sidebar-brand">
            <div class="brand-logo">
                <i class="fas fa-heart text-danger"></i>
            </div>
            <h4 class="brand-text">CareConnect</h4>
        </div>
        <button class="sidebar-toggle" onclick="toggleSidebar()" title="Toggle Sidebar">
            <i class="fas fa-bars"></i>
        </button>
        <!-- Notification Bell -->
        <div class="notification-bell" onclick="toggleNotificationPanel()" title="Notifications">
            <i class="fas fa-bell text-white"></i>
            <span id="notificationBadge" class="notification-badge badge bg-danger" style="display: none;">0</span>
        </div>
    </div>
    
    <nav class="sidebar-nav">
        <ul class="nav-list">
            <% if (user && user.ngo_name) { %>
                <!-- NGO Navigation -->
                <li class="nav-item">
                    <a href="/dashboard/ngo" class="nav-link <%= currentPage === 'ngo-dashboard' ? 'active' : '' %>" title="NGO Dashboard">
                        <i class="fas fa-tachometer-alt"></i>
                        <span class="nav-text">NGO Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/ngo/requests" class="nav-link" title="Create Request">
                        <i class="fas fa-plus-circle"></i>
                        <span class="nav-text">Create Request</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/ngo/verification" class="nav-link" title="Verification">
                        <i class="fas fa-shield-alt"></i>
                        <span class="nav-text">Verification</span>
                    </a>
                </li>
            <% } else if (volunteer) { %>
                <!-- Volunteer Navigation -->
                <li class="nav-item">
                    <a href="/dashboard/volunteer" class="nav-link <%= currentPage === 'volunteer-dashboard' ? 'active' : '' %>" title="Volunteer Dashboard">
                        <i class="fas fa-tachometer-alt"></i>
                        <span class="nav-text">Volunteer Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/volunteer/available" class="nav-link" title="Available Requests">
                        <i class="fas fa-list"></i>
                        <span class="nav-text">Available Requests</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/volunteer/my-requests" class="nav-link" title="My Requests">
                        <i class="fas fa-tasks"></i>
                        <span class="nav-text">My Requests</span>
                    </a>
                </li>
            <% } else if (user) { %>
                <!-- Donor Navigation -->
                <li class="nav-item">
                    <a href="/dashboard/donor" class="nav-link <%= currentPage === 'donor-dashboard' ? 'active' : '' %>" title="Donor Dashboard">
                        <i class="fas fa-tachometer-alt"></i>
                        <span class="nav-text">Donor Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/donate" class="nav-link" title="Make Donation">
                        <i class="fas fa-heart"></i>
                        <span class="nav-text">Make Donation</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/donate/history" class="nav-link" title="Donation History">
                        <i class="fas fa-history"></i>
                        <span class="nav-text">Donation History</span>
                    </a>
                </li>
            <% } %>
            
            <!-- Common Navigation -->
            <li class="nav-divider"></li>
            <li class="nav-item">
                <a href="/" class="nav-link" title="Home">
                    <i class="fas fa-home"></i>
                    <span class="nav-text">Home</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/about" class="nav-link" title="About">
                    <i class="fas fa-info-circle"></i>
                    <span class="nav-text">About</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/contact" class="nav-link" title="Contact">
                    <i class="fas fa-envelope"></i>
                    <span class="nav-text">Contact</span>
                </a>
            </li>
            
            <!-- User Actions -->
            <li class="nav-divider"></li>
            <% if (user || volunteer || ngo) { %>
                <li class="nav-item">
                    <a href="/profile" class="nav-link" title="Profile">
                        <i class="fas fa-user"></i>
                        <span class="nav-text">Profile</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/logout" class="nav-link text-danger" title="Logout">
                        <i class="fas fa-sign-out-alt"></i>
                        <span class="nav-text">Logout</span>
                    </a>
                </li>
            <% } else { %>
                <li class="nav-item">
                    <a href="/user-login" class="nav-link" title="Login">
                        <i class="fas fa-sign-in-alt"></i>
                        <span class="nav-text">Login</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/register-user" class="nav-link" title="Register">
                        <i class="fas fa-user-plus"></i>
                        <span class="nav-text">Register</span>
                    </a>
                </li>
            <% } %>
        </ul>
    </nav>
    
    <!-- Sidebar Footer -->
    <div class="sidebar-footer">
        <div class="user-info">
            <% if (user && user.ngo_name) { %>
                <div class="user-avatar bg-primary">
                    <i class="fas fa-building"></i>
                </div>
                <div class="user-details">
                    <h6><%= user.ngo_name %></h6>
                    <small class="text-muted">NGO</small>
                </div>
            <% } else if (volunteer) { %>
                <div class="user-avatar bg-success">
                    <i class="fas fa-hand-holding-heart"></i>
                </div>
                <div class="user-details">
                    <h6><%= volunteer.fullname || volunteer.name %></h6>
                    <small class="text-muted">Volunteer</small>
                </div>
            <% } else if (user) { %>
                <div class="user-avatar bg-info">
                    <i class="fas fa-heart"></i>
                </div>
                <div class="user-details">
                    <h6><%= user.fullname %></h6>
                    <small class="text-muted">Donor</small>
                </div>
            <% } %>
        </div>
    </div>
</div>
<div class="maindiv">
    <form id="myForm" action="/donated" method="post">
    <div class="parentdiv">
        <h2>Shedule your pickup</h2>
        <!-- <div class="wrapper"> -->

            <div class="date-time-picker">
                <div class="calendar">
                    <h2>Select Date:</h2>
                    <input type="date" class="date" name="date">
                </div>
                <div class="timeslots">
                    <h2>Select Time:</h2>
                    <label class="time-option">
                        <input type="radio" name="time" value="9:00 AM"> 9:00 AM
                        <span class="checkmark"></span>
                    </label>
                    <label class="time-option">
                        <input type="radio" name="time" value="12:00 PM"> 12:00 PM
                        <span class="checkmark"></span>
                    </label>
                    <label class="time-option">
                        <input type="radio" name="time" value="3:00 PM"> 3:00 PM
                        <span class="checkmark"></span>
                    </label>
                    <label class="time-option">
                        <input type="radio" name="time" value="6:00 PM"> 6:00 PM
                        <span class="checkmark"></span>
                    </label>
                </div>
            </div>
        <!-- </div> -->
        <input type="hidden" name="donationId" value="<%= donationId %>">
        <input type="submit" value="Submit" class="submit">
    </form>
    </div>

</div>

<script>
    document.getElementById("myForm").addEventListener("submit", function(event) {
        const currentDate = new Date();
        const enteredDate = new Date(document.getElementsByName("date")[0].value.trim());
        const timeSelected = document.querySelector('input[name="time"]:checked');
    
        // Check if the entered date is valid and not in the past
        if (isNaN(enteredDate.getTime()) || currentDate >= enteredDate) {
            event.preventDefault();
            showMessage("Please enter a valid future date.", "error");
            return false;
        }
        
        // Check if time is selected
        if (!timeSelected) {
            event.preventDefault();
            showMessage("Please select a pickup time.", "error");
            return false;
        }
        
        // Show success message
        showMessage("Thank you! Your donation has been submitted successfully. A volunteer will contact you soon.", "success");
        return true;
    });
    
    function showMessage(message, type) {
        // Remove existing message container if any
        const existingMessage = document.getElementById('messageContainer');
        if (existingMessage) {
            existingMessage.remove();
        }
        
        // Create message container
        const messageContainer = document.createElement('div');
        messageContainer.id = 'messageContainer';
        messageContainer.style.cssText = `
            position: fixed;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            padding: 15px 30px;
            border-radius: 8px;
            color: white;
            font-weight: 600;
            z-index: 1000;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            max-width: 90%;
            text-align: center;
        `;
        
        if (type === 'error') {
            messageContainer.style.backgroundColor = '#ef5350';
        } else {
            messageContainer.style.backgroundColor = '#4caf50';
        }
        
        messageContainer.textContent = message;
        document.body.appendChild(messageContainer);
        
        // Auto-hide after 5 seconds
        setTimeout(() => {
            if (messageContainer.parentNode) {
                messageContainer.remove();
            }
        }, 5000);
    }
    </script>



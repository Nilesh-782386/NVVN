<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Volunteer Dashboard - CareConnect</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar Navigation -->
        <%- include("../partials/sidebar.ejs") %>
        
        <!-- Main Content -->
        <div class="main-content">
            <div class="dashboard-header">
                <h1><i class="fas fa-hand-holding-heart text-success"></i> Volunteer Dashboard</h1>
                <p class="text-muted">Welcome, <%= volunteer ? volunteer.fullname || volunteer.name : 'Volunteer' %></p>
            </div>

            <!-- Dashboard Stats -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="stat-card bg-info">
                        <div class="stat-icon">
                            <i class="fas fa-list"></i>
                        </div>
                        <div class="stat-content">
                            <h3><%= availableDonations ? availableDonations.length : 0 %></h3>
                            <p>Available Requests</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card bg-primary">
                        <div class="stat-icon">
                            <i class="fas fa-tasks"></i>
                        </div>
                        <div class="stat-content">
                            <h3><%= myDonations ? myDonations.filter(d => d.status === 'assigned').length : 0 %></h3>
                            <p>Accepted Requests</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card bg-warning">
                        <div class="stat-icon">
                            <i class="fas fa-truck"></i>
                        </div>
                        <div class="stat-content">
                            <h3><%= myDonations ? myDonations.filter(d => d.status === 'picked_up').length : 0 %></h3>
                            <p>In Progress</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card bg-success">
                        <div class="stat-icon">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <div class="stat-content">
                            <h3><%= myDonations ? myDonations.filter(d => d.status === 'delivered' || d.status === 'completed').length : 0 %></h3>
                            <p>Completed</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Available Donation Requests -->
            <div class="section-card">
                <h2><i class="fas fa-list text-info"></i> Available Donation Requests</h2>
                <div class="row">
                    <% if (availableDonations && availableDonations.length > 0) { %>
                        <% availableDonations.forEach(donation => { %>
                        <div class="col-md-6 col-lg-4 mb-3">
                            <div class="donation-request-card">
                                <div class="card-header">
                                    <h5>Request #<%= donation.id %></h5>
                                    <span class="badge bg-warning">Pending</span>
                                </div>
                                <div class="card-body">
                                    <h6><i class="fas fa-user"></i> <%= donation.donor_name || 'Anonymous Donor' %></h6>
                                    <p class="text-muted mb-2">
                                        <i class="fas fa-map-marker-alt"></i> <%= donation.city %>, <%= donation.state %>
                                    </p>
                                    <div class="donation-items mb-3">
                                        <% if (donation.books > 0) { %><span class="badge bg-info">Books: <%= donation.books %></span> <% } %>
                                        <% if (donation.clothes > 0) { %><span class="badge bg-success">Clothes: <%= donation.clothes %></span> <% } %>
                                        <% if (donation.grains > 0) { %><span class="badge bg-warning">Grains: <%= donation.grains %></span> <% } %>
                                        <% if (donation.toys > 0) { %><span class="badge bg-primary">Toys: <%= donation.toys %></span> <% } %>
                                        <% if (donation.footwear > 0) { %><span class="badge bg-dark">Footwear: <%= donation.footwear %></span> <% } %>
                                    </div>
                                    <% if (donation.pickup_date) { %>
                                    <p class="mb-2">
                                        <i class="fas fa-calendar"></i> 
                                        <strong>Pickup:</strong> <%= new Date(donation.pickup_date).toLocaleDateString() %>
                                        <% if (donation.pickup_time) { %> at <%= donation.pickup_time %><% } %>
                                    </p>
                                    <% } %>
                                    <div class="card-actions">
                                        <button class="btn btn-success btn-sm" onclick="acceptRequest(<%= donation.id %>)">
                                            <i class="fas fa-check"></i> Accept
                                        </button>
                                        <button class="btn btn-outline-info btn-sm" onclick="viewRequestDetails(<%= donation.id %>)">
                                            <i class="fas fa-eye"></i> Details
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                    <% } else { %>
                        <div class="col-12 text-center py-4">
                            <i class="fas fa-search fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No available donation requests in your area</p>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- My Accepted Requests -->
            <div class="section-card">
                <h2><i class="fas fa-tasks text-primary"></i> My Accepted Requests</h2>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Donor</th>
                                <th>Items</th>
                                <th>Status</th>
                                <th>Pickup</th>
                                <th>NGO</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (myDonations && myDonations.length > 0) { %>
                                <% myDonations.forEach(donation => { %>
                                <tr>
                                    <td>#<%= donation.id %></td>
                                    <td>
                                        <strong><%= donation.donor_name || 'Anonymous' %></strong><br>
                                        <small class="text-muted"><%= donation.email %></small>
                                    </td>
                                    <td>
                                        <% if (donation.books > 0) { %><span class="badge bg-info me-1">Books: <%= donation.books %></span><% } %>
                                        <% if (donation.clothes > 0) { %><span class="badge bg-success me-1">Clothes: <%= donation.clothes %></span><% } %>
                                        <% if (donation.grains > 0) { %><span class="badge bg-warning me-1">Grains: <%= donation.grains %></span><% } %>
                                        <% if (donation.toys > 0) { %><span class="badge bg-primary me-1">Toys: <%= donation.toys %></span><% } %>
                                        <% if (donation.footwear > 0) { %><span class="badge bg-dark me-1">Footwear: <%= donation.footwear %></span><% } %>
                                    </td>
                                    <td>
                                        <span class="badge bg-<%= getStatusColor(donation.status) %>">
                                            <%= donation.status.charAt(0).toUpperCase() + donation.status.slice(1) %>
                                        </span>
                                    </td>
                                    <td>
                                        <% if (donation.pickup_date) { %>
                                            <%= new Date(donation.pickup_date).toLocaleDateString() %>
                                            <% if (donation.pickup_time) { %>
                                                <br><small><%= donation.pickup_time %></small>
                                            <% } %>
                                        <% } else { %>
                                            <span class="text-muted">Not scheduled</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <%= donation.ngo_name || 'Not assigned' %>
                                    </td>
                                    <td>
                                        <% if (donation.status === 'assigned') { %>
                                        <button class="btn btn-sm btn-primary" onclick="markPickedUp(<%= donation.id %>)">
                                            <i class="fas fa-truck"></i> Picked Up
                                        </button>
                                        <% } else if (donation.status === 'picked_up') { %>
                                        <button class="btn btn-sm btn-success" onclick="markDelivered(<%= donation.id %>)">
                                            <i class="fas fa-check"></i> Delivered
                                        </button>
                                        <% } %>
                                        <button class="btn btn-sm btn-outline-info" onclick="viewRequestDetails(<%= donation.id %>)">
                                            <i class="fas fa-eye"></i> Details
                                        </button>
                                    </td>
                                </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="7" class="text-center py-4">
                                        <i class="fas fa-clipboard-list fa-3x text-muted mb-3"></i>
                                        <p class="text-muted">No accepted requests yet</p>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/volunteer-dashboard.js"></script>
</body>
</html>

<% 
function getStatusColor(status) {
    switch(status) {
        case 'pending': return 'warning';
        case 'assigned': return 'info';
        case 'picked_up': return 'primary';
        case 'delivered': return 'success';
        case 'completed': return 'success';
        default: return 'secondary';
    }
}
%>
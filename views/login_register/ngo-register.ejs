<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>edai</title>
    <link rel="stylesheet" href="css/login_register/ngo-register.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

</head>
<body>
 

<!-- nav bar  -->

<%- include("../partials/navbar.ejs", { user: user, ngo: ngo }) %>


<div>
    <h1  class="head">NGO Registration</h1>
</div>

<div class="maindiv">
    <div class="parentdiv">

        <form method="post" action="/ngo-register" enctype="multipart/form-data" id="myForm" >
            <div class="namediv">
                <div class="fname">
                    <label for="ngo_name">Name of Ngo</label><br>
                    <!-- ‚úÖ FIXED: id="ngo_name" -->
                    <input type="text" id="ngo_name" name="name" value="Avishkar" required>
                </div>
                <div class="lname">
                    <label for="registration_number">Registration Number</label><br>
                    <!-- ‚úÖ FIXED: id="registration_number" -->
                    <input type="tel" id="registration_number" name="registration_number" value="" required>
                </div>
            </div>
            <div class="emaildiv">
                <label for="email">Email </label><br>
                <input type="email" id="email" name="email" required >
            </div>
            <div class="phonenodiv">
                <div class="primaryno">
                    <label for="phone">Phone Number</label><br>
                    <input type="tel" id="phone" name="phone" required >
                </div>
                <div class="alternateno">
                    <label for="phone2">Alternate Phone number</label><br>
                    <input type="tel" id="phone2" name="phone2" required>
                </div>
            </div>
            
            <div class="line">
                <hr>
            </div>

            <label for="" class="addhead">Address</label>


            <div class="address">
                
                <div class="Office Address">
                    <label for="addline">NGO Address</label><br>
                    <textarea id="addline" name="addline" rows="5" cols="93" required></textarea><br>
             
                </div>
                <div class="landmark">
                    <label for="land" class="extramargin">Nearby Landmark(optional) </label><br>
                    <input type="text" id="land" name="land" class="medinput" required>
                </div>

                <div class="citystate">
                    <div class="cityname">
                        <label for="city">City</label><br>
                        <input type="text" id="city" name="city" required>
                    </div>
                    <div class="statename">
                        <label for="state">State</label><br>
                        <input type="text" id="state" name="state" required>
                    </div>
                </div>
                <div class="pincode">
                    <label for="pincode">PIN Code:</label><br>
                    <input type="text" id="pincode" name="pincode" pattern="[0-9]{6}" title="PIN code should be 6 digits long" required>
                    
                </div>

                <div class="line">
                    <hr>
                </div>

                <div class="note">
                    <label for="optnote">Tell us about your NGO</label><br>
                    <textarea id="optnote" name="optnote" rows="5" cols="93"></textarea>
                </div>

                <!-- NGO Specialization Selection -->
                <div class="specialization-section">
                    <label for="specialization" class="specialization-label">
                        <i class="fas fa-bullseye"></i> NGO Specialization
                    </label>
                    <div class="specialization-description">
                        <p>Select your NGO's primary focus area. This determines which donation items you can approve.</p>
                    </div>
                    <div class="specialization-options">
                        <div class="specialization-card" data-value="food">
                            <div class="specialization-icon">
                                <i class="fas fa-apple-alt"></i>
                            </div>
                            <div class="specialization-content">
                                <h4>üçé Food NGO</h4>
                                <p>Specializes in: Food, Grains, Water</p>
                                <small>Can approve: Food, Grains, Medicine, Water</small>
                            </div>
                        </div>
                        
                        <div class="specialization-card" data-value="clothing">
                            <div class="specialization-icon">
                                <i class="fas fa-tshirt"></i>
                            </div>
                            <div class="specialization-content">
                                <h4>üëï Clothing NGO</h4>
                                <p>Specializes in: Clothes, Blankets, Footwear</p>
                                <small>Can approve: Clothes, Blankets, Footwear, Food, Medicine, Water</small>
                            </div>
                        </div>
                        
                        <div class="specialization-card" data-value="education">
                            <div class="specialization-icon">
                                <i class="fas fa-book"></i>
                            </div>
                            <div class="specialization-content">
                                <h4>üìö Education NGO</h4>
                                <p>Specializes in: Books, School Supplies, Toys</p>
                                <small>Can approve: Books, School Supplies, Toys, Food, Medicine, Water</small>
                            </div>
                        </div>
                        
                        <div class="specialization-card" data-value="medical">
                            <div class="specialization-icon">
                                <i class="fas fa-heartbeat"></i>
                            </div>
                            <div class="specialization-content">
                                <h4>üè• Medical NGO</h4>
                                <p>Specializes in: Medicines, Medical Equipment</p>
                                <small>Can approve: Medicines, Medical Equipment, Food, Water</small>
                            </div>
                        </div>
                        
                        <div class="specialization-card" data-value="elderly_care">
                            <div class="specialization-icon">
                                <i class="fas fa-user-friends"></i>
                            </div>
                            <div class="specialization-content">
                                <h4>üë¥ Elderly Care NGO</h4>
                                <p>Specializes in: Food, Medicine, Clothes</p>
                                <small>Can approve: Food, Medicine, Clothes, Water</small>
                            </div>
                        </div>
                        
                        <div class="specialization-card" data-value="multi_purpose">
                            <div class="specialization-icon">
                                <i class="fas fa-globe"></i>
                            </div>
                            <div class="specialization-content">
                                <h4>üîÑ Multi-purpose NGO</h4>
                                <p>Specializes in: All Items</p>
                                <small>Can approve: All donation items</small>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" id="ngo_type" name="ngo_type" value="multi_purpose" required>
                </div>
                
                <div class="url">
                    <label for="url">Website Url</label><br>
                    <input type="url" id="url" name="url" class="medinput" required>
                </div>
                <div class="socialsurl">
                    <label for="socialsurl" >Social handle Url</label><br>
                    <input type="url" id="socialsurl" name="socialsurl" class="medinput smurl" required>
                </div>


                <div class="fileupload">
                    <label for="file" class="upfile">Upload your Registration Certificate: </label>
                    <input type="file" id="file" name="file" required>
                </div>
                <div class="terms">
                    <label>
                        <input type="checkbox" id="terms" name="terms" required class="checkbox">
                        I agree to the <a href="terms_and_conditions.html" target="_blank">Terms and Conditions</a>
                    </label>
                </div>
                
            </div>

        </div>

        <!-- Registration Button Section -->
        <div class="buttons"> 
            <button type="submit" value="submit" class="nextbut">
                <i class="fas fa-user-plus"></i> Register NGO
            </button>
        </div>
    </div>
</div>
</form>


</body>
<script>
  document.getElementById("myForm").addEventListener("submit", function (event) {
   alert("We Will verify your Details and your Ngo In next 24 Hours");
  });
  
  // NGO Specialization Selection
  document.addEventListener('DOMContentLoaded', function() {
    const specializationCards = document.querySelectorAll('.specialization-card');
    const ngoTypeInput = document.getElementById('ngo_type');
    
    // Set default selection
    const defaultCard = document.querySelector('.specialization-card[data-value="multi_purpose"]');
    if (defaultCard) {
      defaultCard.classList.add('selected');
    }
    
    specializationCards.forEach(card => {
      card.addEventListener('click', function() {
        // Remove selected class from all cards
        specializationCards.forEach(c => c.classList.remove('selected'));
        
        // Add selected class to clicked card
        this.classList.add('selected');
        
        // Update hidden input value
        const value = this.getAttribute('data-value');
        ngoTypeInput.value = value;
        
        console.log('Selected NGO type:', value);
      });
    });
  });
  
</script>
</html>